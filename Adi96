<script>
  const qrSize = 150;

  const qr1 = new QRCode(document.getElementById("qr1"), { width: qrSize, height: qrSize });
  const qr2 = new QRCode(document.getElementById("qr2"), { width: qrSize, height: qrSize });
  const qr3 = new QRCode(document.getElementById("qr3"), { width: qrSize, height: qrSize });

  function setupQR(inputId, qrObj, labelId, itemId) {
    const input = document.getElementById(inputId);
    const label = document.getElementById(labelId);
    const item = document.getElementById(itemId);

    input.addEventListener("input", function () {
      const val = this.value.trim();
      qrObj.clear();

      if (val) {
        qrObj.makeCode(val);
        label.textContent = val;
        item.style.display = "block";
      } else {
        item.style.display = "none";
        label.textContent = "";
      }
    });
  }

  setupQR("text1", qr1, "label1", "item1");
  setupQR("text2", qr2, "label2", "item2");
  setupQR("text3", qr3, "label3", "item3");
</script>

