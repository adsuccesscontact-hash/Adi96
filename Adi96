<!-- QR OUTPUT (ONE ROW) -->
<div class="qr-row">

  <div class="qr-item" id="item1">
    <div id="qr1" class="qr-box"></div>
    <div id="label1" class="qr-text"></div>
  </div>

  <div class="qr-item" id="item2">
    <div id="qr2" class="qr-box"></div>
    <div id="label2" class="qr-text"></div>
  </div>

  <div class="qr-item" id="item3">
    <div id="qr3" class="qr-box"></div>
    <div id="label3" class="qr-text"></div>
  </div>

